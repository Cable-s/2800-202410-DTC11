<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coffee Machine Control Panel</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography,aspect-ratio,line-clamp,container-queries"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#2D2B32',
                        secondary: '#B2EBF2',
                        background: '#222229',
                        accent: 'white'
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body class="bg-background text-accent">
    <%- include("top_navbar.ejs") %>
    <main class="flex flex-col items-center justify-center min-h-screen">
        <!-- Coffee Machine Icon Section -->
        <section class="mb-8">
            <div class="w-48 h-48 rounded-full shadow-lg flex items-center justify-center bg-primary text-secondary">
                <i class="fas fa-coffee fa-4x"></i>
            </div>
        </section>

        <!-- Brew Strength Control Section -->
        <section class="mb-8 w-full px-4">
            <div class="text-center mb-4">
                <h2 class="text-2xl font-bold">Adjust Brew Strength</h2>
            </div>
            <div class="flex justify-center gap-4">
                <button class="bg-background text-secondary hover:bg-secondary hover:text-primary py-2 px-4 rounded">Light</button>
                <button class="bg-background text-secondary hover:bg-secondary hover:text-primary py-2 px-4 rounded">Medium</button>
                <button class="bg-background text-secondary hover:bg-secondary hover:text-primary py-2 px-4 rounded">Strong</button>
            </div>
        </section>

        <!-- Brew Size Control Section -->
        <section class="mb-8 w-full px-4">
            <div class="text-center mb-4">
                <h2 class="text-2xl font-bold">Select Brew Size</h2>
            </div>
            <div class="flex justify-center gap-4">
                <button class="bg-background text-secondary hover:bg-secondary hover:text-primary py-2 px-4 rounded">Small</button>
                <button class="bg-background text-secondary hover:bg-secondary hover:text-primary py-2 px-4 rounded">Medium</button>
                <button class="bg-background text-secondary hover:bg-secondary hover:text-primary py-2 px-4 rounded">Large</button>
            </div>
        </section>

        <!-- Temperature Control Section -->
        <section class="mb-8 w-full px-4">
            <div class="text-center mb-4">
                <h2 class="text-2xl font-bold">Set Temperature</h2>
            </div>
            <input type="range" min="60" max="100" value="80" class="w-full h-2 bg-secondary rounded-lg appearance-none cursor-pointer">
        </section>
    </main>
    <%- include("bottom_navbar.ejs") %>
</body>
</html>
