<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Light Control Panel</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography,aspect-ratio,line-clamp,container-queries"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#2D2B32',
                        secondary: '#B2EBF2',
                        background: '#222229',
                        accent: 'white'
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body class="bg-background text-accent">
    <%- include("top_navbar.ejs") %>
    <main class="flex flex-col items-center justify-center min-h-screen">
        <!-- Light Icon Section -->
        <section class="mb-8">
            <div class="w-48 h-48 rounded-full shadow-lg flex items-center justify-center bg-primary text-secondary">
                <i class="fas fa-lightbulb fa-4x"></i>
            </div>
        </section>

        <!-- Brightness Control Section -->
        <section class="mb-8 w-full px-4">
            <div class="text-center mb-4">
                <h2 class="text-2xl font-bold">Adjust Brightness</h2>
            </div>
            <input type="range" min="0" max="100" value="50" class="w-full h-2 bg-secondary rounded-lg appearance-none cursor-pointer">
        </section>

        <!-- Color Control Section -->
        <section class="w-full px-4">
            <div class="text-center mb-4">
                <h2 class="text-2xl font-bold">Change Color</h2>
            </div>
            <div class="flex justify-center gap-4">
                <button class="w-10 h-10 rounded-full bg-red-500 hover:bg-red-700"></button>
                <button class="w-10 h-10 rounded-full bg-green-500 hover:bg-green-700"></button>
                <button class="w-10 h-10 rounded-full bg-blue-500 hover:bg-blue-700"></button>
                <button class="w-10 h-10 rounded-full bg-yellow-500 hover:bg-yellow-700"></button>
                <button class="w-10 h-10 rounded-full bg-purple-500 hover:bg-purple-700"></button>
            </div>
        </section>
    </main>
    <%- include("bottom_navbar.ejs") %>
</body>
</html>
