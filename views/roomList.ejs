<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Harmonia</title>
    <script
        src="https://cdn.tailwindcss.com?plugins=forms,typography,aspect-ratio,line-clamp,container-queries"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#2D2B32',
                        secondary: '#B2EBF2',
                        background: '#222229',
                        accent: 'white'
                    }
                }
            }
        }
    </script>
    <script src="/scripts/filter.js"></script>
</head>
<%- include("top_navbar.ejs") %>

    <body class="bg-background">
        <main class="flex-1 mt-16 mb-10 mx-2">
            <!-- Filter Section -->
            <section class="w-full py-4">
                <div class="container px-4">
                    <div class="grid">
                        <div class="border-b border-gray-700 bg-primary px-4 py-5 rounded-lg">
                            <div class="flex items-center justify-center">
                                <div class="mt-2">
                                    <h3 class="text-2xl font-semibold text-accent">Classify Devices</h3>
                                </div>
                            </div>
                            <div class="mt-4 flex justify-center gap-4">
                                <button onclick="filterDevices('room')"
                                    class="bg-background hover:bg-secondary hover:shadow-lg hover:text-primary text-secondary text-base w-24 h-10 rounded-full inline-flex items-center justify-center">
                                    Room
                                </button>
                                <button onclick="filterDevices('category')"
                                    class="bg-background hover:bg-secondary hover:shadow-lg hover:text-primary text-secondary text-base w-24 h-10 rounded-full inline-flex items-center justify-center">
                                    Category
                                </button>
                                <button onclick="filterDevices('activeness')"
                                    class="bg-background hover:bg-secondary hover:shadow-lg hover:text-primary text-secondary text-base w-24 h-10 rounded-full inline-flex items-center justify-center">
                                    Status
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Dynamic Welcome Message -->
            <section class="w-full py-4">
                <div class="container px-4">
                    <div class="grid">
                        <div class="grid gap-2">
                            <% if (classifyBy==='category' ) { %>
                                <h1 class="text-2xl text-accent font-bold">Device Categories</h1>
                                <% } else if (classifyBy==='activeness' ) { %>
                                    <h1 class="text-2xl text-accent font-bold">Device Status</h1>
                                    <% } else { %>
                                        <h1 class="text-2xl text-accent font-bold">Room List</h1>
                                        <% } %>
                        </div>
                        <div class="overflow-x-auto">
                            <div class="flex gap-4"></div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Device Sections -->
            <section id="deviceSections" class="mx-4">
                <% if (classifyBy==='category' || classifyBy==='activeness' ) { %>
                    <% for (let category in devicesByCategory) { %>
                        <section id="<%= category %>_devices" class="w-full bg-primary mt-4 mb-4 py-8 rounded-2xl">
                            <div class="container px-4">
                                <div class="grid grid-cols-1 gap-6">
                                    <!-- 
                                    Display the title and a brief description for each category of devices.
                                    Generated by ChatGPT 4o

                                    line 94 to 100

                                    @author https://chat.openai.com/
                                    -->
                                    <div class="grid gap-2">
                                        <h2 class="text-2xl font-bold text-accent">
                                            <%= category.charAt(0).toUpperCase() + category.slice(1) %>
                                        </h2>
                                        <p class="text-accent">Your devices in the <%= category.charAt(0).toUpperCase()
                                                + category.slice(1) %> category.</p>
                                    </div>
                                    <section class="flex flex-wrap place-content-center gap-x-8 gap-y-4">
                                        <% devicesByCategory[category].forEach(device=> { %>
                                            <div class="text-center p-4 basis-1/6">
                                                <div
                                                    class="bg-background border-4 border-secondary/50 shadow-2xl shadow-secondary hover:bg-background hover:shadow-lg hover:text-primary text-secondary text-xl font-bold w-14 h-14 rounded-full inline-flex items-center justify-center">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                                        viewBox="0 0 24 24" fill="none" stroke="#B2EBF2"
                                                        stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                                        class="h-6 w-6 text-purple-500">
                                                        <path d="M10 2v2"></path>
                                                        <path d="M14 2v2"></path>
                                                        <path d="M6 2v2"></path>
                                                        <path
                                                            d="M16 8a1 1 0 0 1 1 1v8a4 4 0 0 1-4 4H7a4 4 0 0 1-4-4V9a1 1 0 0 1 1-1h14a4 4 0 1 1 0 8h-1">
                                                        </path>
                                                    </svg>
                                                </div>
                                                <div class="text-accent text-xs">
                                                    <%= device.deviceName %>
                                                </div>
                                            </div>
                                            <% }) %>
                                    </section>
                                </div>
                            </div>
                        </section>
                        <% } %>
                            <% } else { %>
                                <% for (let room in devicesByRoom) { %>
                                    <section id="<%= room %>_devices"
                                        class="w-full bg-primary mt-4 mb-4 py-8 rounded-2xl">
                                        <div class="container px-4">
                                            <div class="grid grid-cols-1">
                                                <div class="grid gap-2">
                                                    <h2 class="text-2xl font-bold text-accent">
                                                        <%= room.charAt(0).toUpperCase() + room.slice(1) %>
                                                    </h2>
                                                    <p class="text-accent">Your devices in the <%=
                                                            room.charAt(0).toUpperCase() + room.slice(1) %>.</p>
                                                </div>
                                                <section class="flex flex-wrap place-content-center gap-x-8 gap-y-4">
                                                    <% devicesByRoom[room].forEach(device=> { %>
                                                        <div class="text-center p-4 basis-1/6">
                                                            <div
                                                                class="bg-background border-4 border-secondary/50 shadow-2xl shadow-secondary hover:bg-background hover:shadow-lg hover:text-primary text-secondary text-xl font-bold w-14 h-14 rounded-full inline-flex items-center justify-center">
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="24"
                                                                    height="24" viewBox="0 0 24 24" fill="none"
                                                                    stroke="#B2EBF2" stroke-width="2"
                                                                    stroke-linecap="round" stroke-linejoin="round"
                                                                    class="h-6 w-6 text-purple-500">
                                                                    <path d="M10 2v2"></path>
                                                                    <path d="M14 2v2"></path>
                                                                    <path d="M6 2v2"></path>
                                                                    <path
                                                                        d="M16 8a1 1 0 0 1 1 1v8a4 4 0 0 1-4 4H7a4 4 0 0 1-4-4V9a1 1 0 0 1 1-1h14a4 4 0 1 1 0 8h-1">
                                                                    </path>
                                                                </svg>
                                                            </div>
                                                            <div class="text-accent text-xs">
                                                                <%= device.deviceName %>
                                                            </div>
                                                        </div>
                                                        <% }) %>
                                                </section>
                                            </div>
                                        </div>
                                    </section>
                                    <% } %>
                                        <% } %>
            </section>
        </main>

        <!-- Bottom Navbar -->
        <%- include("bottom_navbar.ejs") %>
    </body>

</html>