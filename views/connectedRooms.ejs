<%- include("top_navbar.ejs") %>

<body class="bg-background mt-20">
    <div class="border-b border-gray-700 bg-primary px-4 py-5 mb-8 sm:px-6 rounded-lg">
        <div class="flex items-center justify-center">
            <div class="mt-2">
                <h3 class="text-2xl font-semibold leading-6 text-secondary text-center">Connected Rooms</h3>
            </div>
        </div>
    </div>
    <section class="flex flex-col text-accent mt-2 mx-3 mt-8 gap-4">
        <% allUsersRooms.forEach((room) => { %>
            <% if (room != '') { %>
                <div class="flex justify-between items-center bg-primary p-4 text-2xl rounded-xl">
                    <div><%= room %></div>
                    <div>
                        <form action="/connectedRooms" method="post" class="my-auto">
                            <input type="button" name='<%= room %>' id='<%= room %>'>   
                                <a href="/devicesPage">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-square-rounded-chevron-right" width="50" height="50" viewBox="0 0 24 24" stroke-width="1.5" stroke="#B2EBF2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                        <path d="M11 9l3 3l-3 3" />
                                        <path d="M12 3c7.2 0 9 1.8 9 9s-1.8 9 -9 9s-9 -1.8 -9 -9s1.8 -9 9 -9z" />
                                    </svg>
                                </a>
                        </form>
                    </div>
                </div>
            <% } %>
        <% }) %>
    </section>
</body>

<%- include("bottom_navbar.ejs") %>